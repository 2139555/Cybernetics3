<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/oneLineComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:longClickable="true">

    <!-- <ProgressBar
        android:id="@+id/replyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/replyRelativeLayout"
        android:visibility="gone"> -->

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:background="#F0F2F5"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="52dp"
                android:layout_height="41dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_studentFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="Student Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/role"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:text="Role"
                    android:textColor="@color/color1"
                    android:textSize="13dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="138dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="22dp"
                android:text="Time" />

            <TextView
                android:id="@+id/votingStatus"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:text="0"
                android:textColor="#F0F2F5"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Answer"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:longClickable="true"
                android:text="An Answer.."
                android:textColorLink="#090808" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/Answer"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_Upvote"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_up_24" />

                <TextView
                    android:id="@+id/tv_NoVotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="0" />

                <ImageButton
                    android:id="@+id/btn_downVote"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/replyID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#F0F2F5" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#94A9C8"
            android:visibility="visible" />


    </LinearLayout>
    <!-- </RelativeLayout> -->
</RelativeLayout>